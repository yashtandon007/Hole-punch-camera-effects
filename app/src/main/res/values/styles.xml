<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar">
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>
    <style name="ActivityTranslucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeNormal">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="TextViewBlackBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="fontFamily">@font/samsung</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/samsung</item>
        <item name="fb_radius">10dp</item>
    </style>

    <style name="DialogButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/ld_side_margin</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">@dimen/ld_side_margin</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextViewPrimary">
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="fontFamily">@font/samsung</item>
    </style>
</resources>
